<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.shibei.zb.zhongbacomplex.View.TopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:centerText="日报"
        app:rightText="新增"></com.shibei.zb.zhongbacomplex.View.TopBar>

    <RelativeLayout
        android:id="@+id/rl_lxsj"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/tt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="未上传数据（"
            android:textColor="#333"
            android:textSize="15sp"

            />
        >

        <TextView
            android:id="@+id/tx_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tt1"
            android:text=" 2 "
            android:textColor="#ff0000"
            android:textSize="15sp"

            />
        >

        <TextView
            android:id="@+id/tt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tx_count"
            android:text="）"
            android:textColor="#333"
            android:textSize="15sp"

            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"

            android:background="@mipmap/jiantouright"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:layout_alignParentBottom="true"
            ></View>
    </RelativeLayout>

    <library.PullToRefreshListView
        android:id="@+id/lst_mytask2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@color/touming"
        android:divider="@null">

    </library.PullToRefreshListView>

    <RelativeLayout
        android:id="@+id/rl_nodata"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/imnodata"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/nodata" />

            <TextView
                android:id="@+id/tv_nodata"
                style="@style/MyTextView14"
                android:layout_below="@+id/imnodata"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="暂无日报，请点击右上角添加~"
                android:textColor="#ccc" />

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>
