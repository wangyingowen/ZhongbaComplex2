<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_content"
        android:layout_height="80dp">


        <com.shibei.zb.zhongbacomplex.View.NewYuanjiaoImage
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:id="@+id/im_headicon"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:background="@mipmap/img_defaultother"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#444"
            android:text="所有人:Owen"
            android:layout_toRightOf="@+id/im_headicon"
            android:id="@+id/tx_uname"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/im_headicon"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#444"
            android:text="地点:515238888888888"
            android:layout_toRightOf="@+id/im_headicon"
            android:id="@+id/tx_address"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@+id/im_headicon"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/line"></View>
    </RelativeLayout>
</LinearLayout>
