<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <TextView
            android:id="@+id/tx_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/im_headicon"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tx_status_display"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="1"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:text="2017-1-12 17:08"
            android:textColor="#666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tx_status_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:text="新任务"
            android:textColor="#ff0000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tx_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tx_time"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:maxLines="3"
            android:ellipsize="end"

            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/im_headicon"
            android:text="处理时限:6小时"
            android:textColor="#333"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/tx_content"
            android:layout_marginTop="15dp"
            android:background="@color/line"></View>
    </RelativeLayout>
</LinearLayout>
