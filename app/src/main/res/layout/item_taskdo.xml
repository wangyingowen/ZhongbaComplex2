<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.shibei.zb.zhongbacomplex.View.RoundImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:id="@+id/im_head"
            android:src="@mipmap/defaultheadicon"

            />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="14sp"
    android:layout_marginTop="15dp"
    android:layout_toRightOf="@+id/im_head"
    android:layout_marginLeft="10dp"
    android:textColor="#333"
    android:id="@+id/tx_name"
    android:text="姓名"

    />



        <TextView
            android:id="@+id/tx_status_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:text="新任务"
            android:textColor="#ff0000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tx_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tx_name"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:maxLines="3"
            android:ellipsize="end"


            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/im_head"
            android:text="处理时限:6小时"
            android:textColor="#333"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tx_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_below="@+id/tx_content"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="2017-1-12 17:08"
            android:textColor="#666"
            android:textSize="12sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/tx_time"
            android:layout_marginTop="10dp"
            android:background="@color/line"></View>
    </RelativeLayout>
</LinearLayout>
