                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/t_jk"
                    style="@style/MyTextView14"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="健康状况:"
                    android:textColor="#333" />

                <EditText
                    android:id="@+id/ed_jiankang"
