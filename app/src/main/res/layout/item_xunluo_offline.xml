<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#F2f2f2"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_content"
        android:layout_height="80dp">


        <com.shibei.zb.zhongbacomplex.View.RoundAngleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:id="@+id/im_headicon"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/defaultheadicon"
            />

        <TextView
            android:id="@+id/tx_lxr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/im_headicon"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/im_headicon"
            android:layout_toLeftOf="@+id/btn_comit"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="王嘉胤王嘉胤王嘉胤王嘉胤"
            android:textColor="#444"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#444"
            android:layout_below="@+id/tx_lxr"
            android:layout_marginTop="10dp"
            android:text="地址"
            android:layout_toRightOf="@+id/im_headicon"
            android:id="@+id/tx_address"
            android:layout_marginLeft="10dp"

            />
        <Button
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/qqlv"
            android:textColor="#FFF"
            android:id="@+id/btn_comit"
            android:text="上传"
            android:textSize="14sp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/line"></View>
    </RelativeLayout>
</LinearLayout>
