<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <com.shibei.zb.zhongbacomplex.View.TopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:centerText="关于我们"></com.shibei.zb.zhongbacomplex.View.TopBar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rl_cc"
            android:layout_centerInParent="true">

            <com.shibei.zb.zhongbacomplex.View.RoundAngleImageView
                android:id="@+id/im1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/newlogo" />

            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/im1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="仲巴综合治理"
                android:textColor="#333"
                android:textSize="20sp" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t1"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:text="版本号:V1.0"
                    android:textColor="#333"
                    android:id="@+id/t2"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="公司:成都拾贝科技有限公司"
                    android:textColor="#333"
                    android:id="@+id/t3"
                    android:textSize="14sp"
                    android:layout_below="@+id/t2"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </RelativeLayout>




    </RelativeLayout>

</LinearLayout>
